#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "ğŸ§ª Running TypeScript type check..."
# Run TypeScript type check (this doesn't modify files)
npx tsc --noEmit || echo "âš ï¸ TypeScript check found issues. Consider fixing them, but proceeding with commit."

# Check formatting with Prettier but don't write changes
echo "ğŸ§¹ Checking code formatting with Prettier..."
npx prettier --check --tab-width=2 --use-tabs . || echo "âš ï¸ Prettier found formatting issues. Consider running 'npx prettier --write --tab-width=2 --use-tabs .' to fix them."

# Run ESLint in check-only mode
echo "ğŸ› ï¸ Checking for ESLint issues..."
npx next lint || echo "âš ï¸ ESLint found issues. Consider running 'npx next lint --fix' to fix automatic issues."

# Optional: Run quick tests locally
# Uncomment if you want to run tests on every commit
# echo "ğŸ§ª Running Jest tests (excluding E2E)..."
# npm test -- --testPathIgnorePatterns="e2e" --silent || echo "âš ï¸ Some tests are failing. Consider fixing them, but proceeding with commit."

